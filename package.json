{
  "name": "janna-monorepo",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx,.css,.less,.scss,.sass,.md,.yml,.yaml .",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint-staged:lint": "eslint",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx,.css,.less,.scss,.sass,.md,.yml,.yaml ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.22.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@antfu/eslint-config-react": "^0.41.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/types": "^18.4.4",
    "@jannajs/lint": "workspace:*",
    "eslint": "npm:eslint-ts-patch@^8.56.0-0",
    "eslint-ts-patch": "^8.56.0-0",
    "lint-staged": "^13.1.2",
    "turbo": "^1.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,less,scss,sass,md,yml,yaml}": "npm run lint-staged:lint"
  }
}
